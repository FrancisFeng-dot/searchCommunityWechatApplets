/* pages/releasegroup/releasegroup.wxss */
page {
  background: #F5F7F7;
}

.releaseinfo{
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 190rpx;
  background: #ffffff;
}

.releaseinfo>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1;
  position: relative;
  margin-top: 18rpx;
}

.releaseinfo>view>view{
  width: 54rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 50%;
  text-align: center;
  font-family: MicrosoftYaHei;
  font-size: 32rpx;
}

.releaseinfo>view>text{
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  color:#1A1A1A;
  margin-top: 22rpx;
}

.releaseinfo>view:last-child{
  position: absolute;
  width: 610rpx;
  height: 3px;
  background: #F0F3F1;
  z-index: 0;
  margin: 0 auto;
  top:76rpx;
}

.colorb3_size28{
  color:#B3B3B3;
  font-size:28rpx;
}

.suggestimglist{
  display: inline-block;
  margin-top: 20rpx;
}

.suggestimglist>image,.suggestimglist>view{
  width:216rpx;
  height:216rpx;
  margin: 10rpx 10rpx;
  float:left;
}

.suggestimglist>view{
  background-size:100% 100%;
  position: relative;
}

.suggestimglist>view>image,.covergroupimg>view:nth-child(2)>image,.uploadqrcode>view:nth-child(2)>view>view>image{
  width:40rpx;height:40rpx;
  position: absolute;
  top:-16rpx;
  right:-16rpx;
}

.labelgroup{
  display: flex;justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-left:30rpx;
}

.labelgroup>button{
  height: 50rpx;
  line-height: 48rpx;
  border-radius: 26rpx;
  font-size:26rpx;
  padding: 0 22rpx;
  margin: 0;
  font-family: SourceHanSansCN-Regular;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.labelgroup>button::after,.gotonext::after{
  border:0;
}

.pickermode{
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  width: 600rpx;float:left;
}

.gotonext{
  width: 610rpx;height: 86rpx;
  background: #10B4FC;
  border-radius: 44rpx;
  border:0;
  font-family: MicrosoftYaHei;
  font-size: 30rpx;
  color:#ffffff;
  margin-bottom: 40rpx;
}

.covergroupimg{
  width:100%;height:340rpx;
  background:#ffffff;
  padding:30rpx;
  box-sizing:border-box
  ;margin-top:20rpx;
  display:flex;flex-direction:column;justify-content:space-between;align-items:center;
}

.covergroupimg>view:nth-child(1){
  font-family:MicrosoftYaHei;
  font-size:28rpx;color:#1A1A1A;
  align-self:flex-start;
}

.covergroupimg>view:nth-child(2){
  width:200rpx;height:200rpx;background-size:100% 100%;position: relative;
}

.uploadqrcode{
  width:100%;height:480rpx;background:#ffffff;margin-top:20rpx;margin-bottom:40rpx;
  display: flex;flex-direction: column;justify-content: space-between;align-items: center;
  box-sizing: border-box;padding: 30rpx;
}

.uploadqrcode>view:nth-child(1){
  font-family:MicrosoftYaHei;font-size:28rpx;color:#1A1A1A;align-self: flex-start;
}

.uploadqrcode>view:nth-child(2){
  display: flex;justify-content: center;align-items: center;
}
.uploadqrcode>view:nth-child(2)>view{
  display: flex;flex-direction:column;justify-content: center;align-items: center;margin:40rpx 50rpx;
}
.uploadqrcode>view:nth-child(2)>view>text{
  font-family:MicrosoftYaHei;font-size:22rpx;color:#4D4D4D;
}
.uploadqrcode>view:nth-child(2)>view>view{
  width:200rpx;height:200rpx;margin-top: 20rpx;background-size:100% 100%;position: relative;
}

.uploadqrcode>view:nth-child(3){
  font-family:MicrosoftYaHei;font-size:22rpx;color:#808080;align-self: flex-start;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  flex-direction: column;
  z-index: 9999;
}

.bags {
  width: 600rpx;
  height: 460rpx;
  z-index: 10000;
  background:#ffffff;
  border-radius: 16rpx;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding:60rpx 40rpx 76rpx;
  box-sizing:border-box;
}

.closepos{
  position:absolute;
  width:40rpx;height:40rpx;
  top:34rpx;right:34rpx;
}

.scantitle{
  font-family:SourceHanSansCN-Regular;
  font-size:32rpx;
  color:#1A1A1A;
  display:flex;justify-content:flex-start;align-items:center;
  padding:0 30rpx;
}

.scantitle>view{
  width:8rpx;height:30rpx;
  background:#10B4FC;margin-right:12rpx;
}

.scancodejoin{
  display:flex;justify-content:center;align-items:center;
}

.scancodejoin>view{
  display:flex;flex-direction:column;justify-content:space-around;align-items:center;
  width: 276rpx;height:390rpx;
  background-image:url('https://qmzgcdn.boc7.net/qmzq/qrcodebackground1.png');
  background-size:100% 100%;
  box-sizing: border-box;
  padding: 32rpx 0 28rpx;
}

.scancodejoin>view>text:nth-child(1){
  font-family:SourceHanSansCN-Regular;font-size:28rpx;color:#1A1A1A;
}

.scancodejoin>view>image:nth-child(2){
  width:142rpx;height:212rpx;
}

.scancodejoin>view>text:nth-child(3){
  font-family:SourceHanSansCN-Regular;font-size:22rpx;color:#666666;
}

.aftersubmit{
  width:100%;
  background:#ffffff;
  display:flex;flex-direction:column;justify-content:flex-start;align-items:center;
}

.aftersubmit>view:nth-child(1){
  width:310rpx;height:310rpx;
  background-size:100% 100%;
  display:flex;justify-content:center;align-items:flex-end;margin:86rpx auto 76rpx;
}

.aftersubmit>view:nth-child(1)>navigator{
  width:100%;height:60rpx;
  font-family:SourceHanSansCN-Regular;font-size:26rpx;color:#ffffff;
  display:flex;justify-content:center;align-items:center;
  background:#000000;
  opacity:0.7;
}

.aftersubmit>view:nth-child(2){
  display:flex;flex-direction:column;justify-content:center;align-items:center;
}

.aftersubmit>view:nth-child(3){
  display:flex;justify-content:center;align-items:center;margin-top:60rpx;
}